{
  "name": "auto-switcher",
  "displayName": "Profile Auto Switcher",
  "description": "Automatic profile switcher",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDidOpenTextDocument",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "properties": {
        "autoProfileSwitcher.extensions": {
          "type": "array",
          "default": [],
          "description": "File extensions mapped to profiles.",
          "items": {
            "type": "object",
            "properties": {
              "profile": {
                "type": "string",
                "description": "The name of the profile."
              },
              "extensions": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "List of file extensions associated with the profile."
              }
            },
            "required": [
              "profile",
              "extensions"
            ]
          }
        }
      }
    },
    "commands": [
      {
        "command": "autoProfileSwitcher.enable",
        "title": "Enable Auto Profile Switcher"
      },
      {
        "command": "autoProfileSwitcher.disable",
        "title": "Disable Auto Profile Switcher"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
